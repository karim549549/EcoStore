    <div class="order">
        <div class="container">
            <form asp-action="Order" asp-controller="Products">
                <div class="row">
                    <div class="form-group col-lg-5">
                        <label for="exampleInputPassword1">Quantity</label>
                        <input required="true" name="Quantity" type="number" class="form-control" placeholder="*****">
                        <small class="form-text text-muted">max per order 20 pieces</small>
                    </div>
                    <div class="form-group col-lg-6">
                        <label for="exampleInputPassword1">BagID</label>
                        <select required="true" name="BagId" class="form-control">
                            <option value="">255</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                       
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-11 form-group">
                        <label for="exampleInputEmail1">Name</label>
                        <input required="true" type="text" class="form-control" name="Username" placeholder="Ex:CrossBag..">
                        <small class="form-text text-muted">Consider our policies</small>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 flex justify-content-center align-item-center ">
                        <button type="submit" class="btn btnsubmit ">Submit</button>
                    </div>
                </div>
            </form>
        </div>
